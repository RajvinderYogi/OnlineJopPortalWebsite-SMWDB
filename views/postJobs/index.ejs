<% include ../shared/header.ejs %>
<div class="container">
<h1 style="text-align: center; font-weight: bold; padding: 20px" >Posted Jobs</h1>
<%if (user.userType === 'employer'){%>
<a href="../postJobs/add"> Add New Job</a>
<%}%>
<table class="table table-striped table-bordered table-hover">
    <caption>Available Job Postings</caption>
    <tr>
        <th>Event</th>
        <th>Title</th>
        <th>Description</th>
        <th>Requirements</th>
        <%if (user.userType === 'employer'){%>
        <th>Edit/Delete</th>
        <%}%>
    </tr>
    <% for(i=0; i<postjobs.length; i++) { %>
    <tr >
        <td><%= postjobs[i].event%></td>
        <td><%= postjobs[i].title %></td>
        <td><%= postjobs[i].description %></td>
        <td><%= postjobs[i].requirements %></td>
        <%if (user.userType === 'employer'){%>
       <td><a href="/postJobs/edit/<%= postjobs[i]._id%>" class="btn btn-warning col-md-2">Edit Job</a>
        <a href="/postJobs/delete/<%= postjobs[i]._id%>" class="btn btn-danger col-md-3" onclick="return confirm('Are you sure want to delete this Job Posting?')"> Delete Job</a></td>
        <%}%>
    </tr>
    <%}%>
</table>
</div>
<% include ../shared/footer.ejs  %>