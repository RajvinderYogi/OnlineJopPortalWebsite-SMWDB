<% include shared/header.ejs%>

    <div class="registration_page container">
        <h3>Join our Community </h3><hr>
        <div class="row">

            <div class="registration_info col-5">
                <p>Please Enter your information in registration form and<br>
                    make sure all input box must be filled. </p>
            </div>

            <div class="registration_form col-7">
                <h4>Register New Account</h4><br>

                <form method="post" action="/register">

                    <fieldset class="form-group">
                        <label for="userType">Account Type</label>
                        <select class="col-md-3 form-control" onchange="EmpOrJob(this);" placeholder="choose.." name="userType" id="userType" required>
                            <option disabled selected>Choose...</option>
                            <option value="jobseeker">Job Seeker</option>
                            <option value="employer">Employer</option>
                        </select>
                    </fieldset>
                    <fieldset class="form-group" id="ifJobSeekerFName">
                        <label for="fName">First Name</label>
                        <input class="col-md-6 form-control" type="text" placeholder="First Name" name="fName" id="fName" >
                    </fieldset>
                    <fieldset class="form-group" id="ifJobSeekerLName">
                        <label for="lName">Last Name</label>
                        <input class="col-md-6 form-control" type="text" placeholder="Last Name" name="lName" id="lName" >
                    </fieldset>
                    <fieldset class="form-group" id="ifEmployerCName">
                        <label for="cName">Company Name</label>
                        <input class="col-md-6 form-control" type="text" placeholder="Company Name" name="cName" id="cName" >
                    </fieldset>
                    <fieldset class="form-group" id="ifEmployerCPerson">
                        <label for="cPerson">Contact Person</label>
                        <input class="col-md-6 form-control"  type="text" placeholder="Contact Person" name="cPerson" id="cPerson" >
                    </fieldset>
                    <fieldset class="form-group">
                        <label for="username">Email</label>
                        <input class="col-md-6 form-control" type="email" placeholder="Email" name="username" id="username" required>
                    </fieldset>
                    <fieldset class="form-group">
                        <label for="password">Password</label>
                        <input class="col-md-6 form-control" type="password" placeholder="Password" name="password" id="password" required>
                    </fieldset>
                    <fieldset class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input class="col-md-6 form-control" type="password" placeholder="Password" name="confirmPassword" id="confirmPassword" required>
                    </fieldset>
                    <fieldset class="form-group">
                        <label for="phoneNo">Phone Number</label>
                        <input class="col-md-6 form-control" type="tel" placeholder="Phone Number" name="phoneNo" id="phoneNo">
                    </fieldset>
                    <!--<fieldset class="form-group">-->
                    <!--<label class="control-label col-md-2" for="resume">Resume</label>-->
                    <!--<input type="file" placeholder="Resume" name="resume" id="resume">-->
                    <!--</fieldset>-->
                    <button type="submit" class="btn btn-primary">Register</button>
                    <hr />
                    Already have an account?  <a href="/login" title="Login">Login</a>
                </form>
            </div>
        </div>
    </div>

<% include shared/footer.ejs %>